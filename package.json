  "engines": {
    "node": "5.6.0"
  },
  "dependencies": {
    "cloudinary-core": "^2.0.8",
    "elasticsearch": "^11.0.1",
    "lightslider": "^1.1.5"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "browserify-shim": "^3.8.12",
    "chai": "^3.5.0",
    "class-bind": "^0.2.0",
    "css-loader": "^0.23.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-clean-css": "^2.0.3",
    "gulp-cli": "^1.1.0",
    "gulp-jshint": "^1.11.2",
    "gulp-postcss": "^6.0.1",
    "gulp-sass": "^2.0.4",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.3",
    "jquery": "^2.2.4",
    "jsdom": "^9.2.0",
    "mocha": "^2.5.2",
    "npm-bump": "0.0.18",
    "postcss-reporter": "^1.2.1",
    "postcss-scss": "^0.1.2",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "stylelint": "^1.2.1",
    "stylelint-config-bright": "^1.0.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "scripts": {
    "build": "gulp build",
    "build-dev": "gulp build-dev",
    "start": "webpack-dev-server --config demo/webpack.config.js --content-base demo",
    "test": "mocha --compilers js:babel-core/register src/js/test/*.js",
    "release.major": "npm run test && npm run build && npm-bump major",
    "release.minor": "npm run test && npm run build && npm-bump minor",
    "release.patch": "npm run test && npm run build && npm-bump patch"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "lightslider": "./node_modules/lightslider/dist/js/lightslider.min.js"
  },
  "browserify-shim": {
    "jquery": "global:jQuery"
  }
